@model ResourceAndBooking.Models.Bookings

@{
    ViewData["Title"] = "Delete Booking";
}

<h2>Delete Booking</h2>

<h3>Are you sure you want to delete this booking?</h3>

<div>
    <h4>Booking</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Employee</dt>
        <dd class="col-sm-9">@($"{Model.Employee?.Name} {Model.Employee?.Surname}")</dd>

        <dt class="col-sm-3">Resource</dt>
        <dd class="col-sm-9">@Model.Resource?.Name</dd>

        <dt class="col-sm-3">Start Time</dt>
        <dd class="col-sm-9">@Model.StartTime.ToString("f")</dd>

        <dt class="col-sm-3">End Time</dt>
        <dd class="col-sm-9">@Model.EndTime.ToString("f")</dd>

        <dt class="col-sm-3">Purpose</dt>
        <dd class="col-sm-9">@Model.Purpose</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
   <input type="hidden" name="id" value="@Model.BookingId" />
    <button type="submit" class="btn btn-danger">Delete</button> |
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>